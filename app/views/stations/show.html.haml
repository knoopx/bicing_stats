%h1
  = @station.name
  %small= @station.address

.row
  .span4
    = image_tag @map.url

  .span12
    #availability
    :javascript
      stackedAvailability("#availability", #{@station.samples.hourly.limit(24).value_of(:used)}, #{@station.samples.hourly.limit(50).value_of(:unused)});

    %table.zebra-striped
      %thead
        %tr
          %th Data
          %th Bicicletes
          %th Pàrquings

      %tbody
        - @station.samples.order("created_at desc").hourly.limit(4).each do |sample|
          %tr
            %td= l(sample.created_at.change(:min => 0, :sec => 0), :format => :short)
            %td= sample.used
            %td= sample.unused

%h2 Disponibilitat de bicicletes mitjana per hora durant la setmana

#min-used

:javascript
  usageDistribution("#min-used", "used", #{@station.samples.punchcard.to_json});

%h2 Disponibilitat de pàrquing mitjana per hora durant la setmana

#min-unused

:javascript
  usageDistribution("#min-unused", "unused", #{@station.samples.punchcard.to_json});
